#!/bin/sh
PROG_NAME=$(basename $0)
. /usr/local/lib/kianidraw-common

test -n "$1" || exit_bad_args "$PROG_NAME: 1 arg required: <projectName>"

mkdir "$1" 2>/dev/null \
|| exit_error "$PROG_NAME: \"$1\": cannot create this project here, please check permissions"

cd "$1"

mkdir -p $INTERNAL_IN_D $EXTERNAL_IN_D \
&& > $INTERNAL_CONFIG \
&& echo "$PROG_NAME: created project \"$1\""
