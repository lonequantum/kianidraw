#!/bin/sh
PROG_NAME=$(basename $0)
MSG_PREFIX="$PROG_NAME[$(basename "$(pwd)")]"
. /usr/local/lib/kianidraw-common

is_structure_ok || exit_bad_location "$PROG_NAME"

test -n "$1" || exit_bad_args "Usage: $PROG_NAME <resourceName>"

xcf=$INTERNAL_IN_D/$1.d/$1.xcf
test -f "$xcf" || exit_error "$MSG_PREFIX: \"$1\": resource not found"
gimp "$xcf" &
