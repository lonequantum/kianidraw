#!/bin/sh
PROG_NAME=$(basename $0)
MSG_PREFIX="$PROG_NAME[$(basename "$(pwd)")]"
. /usr/local/lib/kianidraw-common

is_structure_ok || exit_bad_location "$PROG_NAME"

USAGE="Usage: $PROG_NAME resources/<resourceName>"

test -n "$1" || exit_bad_args "$USAGE"

class=$(expr "$1" : '\([^/]*\)')
item=$(expr "$1" : '[^/]*/\(.*\)' | sed 's/\//\\\//g')

case $class in
resources)
	test -n "$item" || exit_bad_args "$USAGE"

	xcf=$INTERNAL_IN_D/$item.d/$item.xcf
	test -f "$xcf" || exit_error "$MSG_PREFIX: \"$1\": not found"
	gimp "$xcf" &;;

*)
	exit_bad_args "$USAGE"
esac
